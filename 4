#include "pch.h"
#include "CppUnitTest.h"
using namespace Microsoft::VisualStudio::CppUnitTestFramework;
using namespace std;

namespace homework4
{
	TEST_CLASS(homework4)
	{
	public:

		TEST_METHOD(TestMethod1)
		{
			int number[3] = { 9 , 3 , 6 };
			int symbolnum = 2;
			int maxnum = 10;
			int smallnumber_exist = 0;
			int bracket_exist = 0;
			int printstyle = 0;
			char symbol[2] = { '+','-' };
			int bracket_place = 0;
			char output[6] = { 0 };
			int i = 0;
			int j = 0;
			{
				if (printstyle == 0)
				{
					if (bracket_exist == 0)
					{
						for (i = 0, j = 0; i < 5; i++, j++)
						{
							output[i] = number[j] + '0';
							if (i < 3)
							{
								output[i + 1] = symbol[j];
							}
							i++;
						}
					}
				}
			}
			char standard[6] = { '9','+','3','-','6' };
			Assert::AreEqual(standard, output);
		}
		TEST_METHOD(TestMethod2)
		{
			int number[3] = { 3 , 7 , 2 };
			int symbolnum = 2;
			int maxnum = 10;
			int smallnumber_exist = 0;
			int bracket_exist = 1;
			int printstyle = 0;
			char symbol[2] = { '*','-' };
			int bracket_place = 1;
			char output[9] = { 0 };
			int i = 0;
			int j = 0;
			if (smallnumber_exist == 0)
			{
				if (printstyle == 0)
				{
					if (bracket_exist == 1)
					{
						if (bracket_place == 1)
						{
							for (i = 0, j = 0; i < 8; i++)
							{
								if (i == 2)
								{
									output[i] = '(';

								}
								else if (i == 7)
								{
									output[i - 1] = ')';
								}
								else
								{
									output[i] = number[j] + '0';
									if (i < 4)
									{
										output[i + 1] = symbol[j];

									}
									i++;
									j++;
								}
							}
						}
					}
				}
			}
			char standard[9] = { '3','*','(','7','-','2',')' };
			Assert::AreEqual(standard, output);
		}
		TEST_METHOD(TestMethod3)
		{
			int number[3] = { 9 , 3 , 4 };
			int symbolnum = 2;
			int maxnum = 10;
			int smallnumber_exist = 0;
			int bracket_exist = 1;
			int printstyle = 0;
			char symbol[2] = { '+','/' };
			int bracket_place = 0;
			char output[9] = { 0 };
			int i = 0;
			int j = 0;
			if (smallnumber_exist == 0)
			{
				if (printstyle == 0)
				{
					if (bracket_exist == 1)
					{
						if (bracket_place == 0)
						{
							for (i = 0, j = 0; i < 8; i++)
							{
								if (i == 0)
								{
									output[i] = '(';
								}
								else
								{
									output[i] = number[j] + '0';
									if (i == 3)
									{
										output[i + 1] = ')';
										i++;
									}
									if (i < 5)
									{
										output[i + 1] = symbol[j];
									}
									i++;
									j++;
								}
							}
						}
					}
				}
			}
			char standard[9] = { '(','9','+','3',')','/','4' };
			Assert::AreEqual(standard, output);
		}
	};
}
